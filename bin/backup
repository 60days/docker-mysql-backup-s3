#!/bin/bash

DATETIME=`date +"%Y-%m-%d_%H"`
FILE=$FILENAME-$DATETIME.sql.gz

mysqldump -h $MYSQL_HOST -P $MYSQL_PORT -u $MYSQL_USER -p$MYSQL_PASSWORD $DB_NAME | gzip -9 -c > $FILE | aws s3 cp $FILE --region=$REGION  s3://$BUCKET

if  [ "$?" != "0" ]; then
    echo "Error occurred in database backup process. Exiting now"
fi

rm $FILE
